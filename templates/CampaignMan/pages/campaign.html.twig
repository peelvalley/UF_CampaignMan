{% extends "pages/abstract/dashboard.html.twig" %}

{% block stylesheets_page %}
    <!-- Page-specific CSS asset bundle -->
    {{ assets.css('css/form-widgets') | raw }}
{% endblock %}

{# Overrides blocks in head of base template #}
{% block page_title %}{{ translate('CAMPAIGN')}}{% endblock %}

{% block page_description %}{{ translate('CAMPAIGN.PAGE_DESCRIPTION')}}{% endblock %}

{% block body_matter %}
    <div class="row">
        <div class="col-md-12">
            <div id="widget-campaignsubs" class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title pull-left"><i class="fas fa-fw fa-list"></i> {{translate('CAMPAIGN.SUBSCRIBER', 2)}}</h3>
                    {% include "tables/table-tool-menu.html.twig" %}
                </div>
                <div class="box-body">
                    {% include "CampaignMan/tables/campaign-subs.html.twig" with {
                            "table" : {
                                "id" : "table-campaign-subs",
                                "columns": ["group"]
                            }
                        }
                    %}
                </div>
                {# {% if not 'add_subscription' in wigets.hidden %}
                <div class="box-footer">
                    <button type="button" class="btn btn-success js-subscription-create">
                        <i class="fas fa-plus-square"></i>  {{ translate("SUBSCRIPTION.CREATE")}}
                    </button>
                </div>
                {% endif %} #}
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts_page %}
    <!-- Include validation rules -->
    <script>
    {% include "pages/partials/page.js.twig" %}
        const campaign = {{ campaign | json_encode() | raw()}}
    </script>

    <!-- Include form widgets JS -->
    {{ assets.js('js/form-widgets') | raw }}

    <!-- Include page-specific JS -->
    {{ assets.js('js/pages/campaign') | raw }}

{% endblock %}